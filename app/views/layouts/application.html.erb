<!DOCTYPE html>
<html>
  <head>
    <link rel="icon" href="https://cdn.worldvectorlogo.com/logos/pinterest-1.svg"/>
    <title>Pintage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <script type="text/javascript">
      window.logoURL = "<%= image_url('pinterest.logo.png') %>";
    </script>
  
    <%= javascript_include_tag 'application' %>
  
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>"
        }; 
      </script>
    <% end %>


  </head>

  <body>
    <%= yield %>

    <script>
      $(function(){

        $("body").on("click", ".js-modal-open", function(event){
          event.preventDefault();
          $(".signin-modal").addClass("is-open");
        });

        $("body").on("click", ".js-modal-close", function(event){
          event.preventDefault();
          $(".signin-modal").removeClass("is-open");
        });

      });
    </script>
  </body>
</html>
