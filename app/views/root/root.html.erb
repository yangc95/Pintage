<script>
  $(function(){

    $("body").on("click", ".js-modal-open", function(event){
      event.preventDefault();
      $(".signin-modal").addClass("is-open");
    });

    $("body").on("click", ".js-modal-close", function(event){
      event.preventDefault();
      $(".signin-modal").removeClass("is-open");
    });

  });
</script>

